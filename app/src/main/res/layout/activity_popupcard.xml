<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.santalu.widget.MaskEditText
        android:id="@+id/edit_card_name"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/textView5"
        android:hint="Enter Payment Name"
        android:inputType="textImeMultiLine"
        android:textSize="12sp"
        app:met_mask="###################" />

    <com.santalu.widget.MaskEditText
        android:id="@+id/edit_card_owner"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_card_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@+id/textView6"
        android:hint="Enter Owner Name"
        android:inputType="textImeMultiLine"
        android:textSize="12sp"
        app:met_mask="###################" />

    <com.santalu.widget.MaskEditText
        android:id="@+id/edit_card_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_card_owner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toEndOf="@+id/textView7"
        android:hint="Enter Card Number"
        android:inputType="textImeMultiLine"
        android:textSize="12sp"
        app:met_mask="###################" />

    <com.santalu.widget.MaskEditText
        android:id="@+id/edit_card_cvv"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_card_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="174dp"
        android:layout_marginRight="174dp"
        android:layout_toEndOf="@+id/textView7"
        android:hint="CVV"
        android:inputType="textImeMultiLine"
        android:textSize="12sp"
        app:met_mask="###################" />

    <com.santalu.widget.MaskEditText
        android:id="@+id/edit_card_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_card_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:layout_toEndOf="@+id/textView9"
        android:hint="Enter Card Expiration"
        android:inputType="textImeMultiLine"
        android:textSize="12sp"
        app:met_mask="###################" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <Button
        android:id="@+id/cancelbutton"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="28dp"
        android:text="Cancel"
        android:textSize="12sp" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="54dp"
        android:text="Save"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="46dp"
        android:text="Title:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="43dp"
        android:text="Name:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="47dp"
        android:text="Number:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="40dp"
        android:text="CVV:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_below="@+id/edit_card_cvv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        android:text="Expiration:"
        android:textSize="12sp" />

</RelativeLayout>